{
  "name": "sphere",
  "private": true,
  "version": "0.2.0",
  "scripts": {
    "install": "cd frontend && npm install && cd api && npm install",
    "dev": "npm run dev:api & npm run dev:vite",
    "test": "npm run test:api",
    "build": "cd frontend && tsc -b && vite build",
    "lint": "eslint .",
    "dev:api": "cd api && npx tsx --tsconfig tsconfig.json src/backend.ts && cd ..",
    "dev:vite": "cd frontend && npx vite && cd ..",
    "test:api": "cd api && npx vitest --run",
    "deploy:vercel": "cd frontend && vite build",
    "deploy:prod": "cd frontend && vite preview --host"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "wait-on": "^8.0.1"
  }
}
